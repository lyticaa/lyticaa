{{ define "flash" }}
    {{ if .Flash.Success }}
        <div class="alert alert-success" role="alert">
            {{ .Flash.Success }}
        </div>
    {{ else if .Flash.Error }}
        <div class="alert alert-danger" role="alert">
            {{ .Flash.Error }}
        </div>
    {{ else if .Flash.Info }}
        <div class="alert alert-info" role="alert">
            {{ .Flash.Info }}
        </div>
    {{ end }}
{{ end }}
